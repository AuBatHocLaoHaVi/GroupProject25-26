<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="6dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">


        <TextView
            android:id="@+id/tvDocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Week 1 Slides â€“ Introduction"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tvDocLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDocName"

            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="https://drive.google.com/..."
            android:textColor="#1B5EDE"
            android:autoLink="web"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnAction"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Open"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#0A2A57" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
